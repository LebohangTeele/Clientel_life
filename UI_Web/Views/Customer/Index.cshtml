<h3>Cart</h3>
<table class="table table-striped" width="100%">
    <tr>
        <th>Redeeme points</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Points</th>
        <th>Credit</th>

    </tr>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td><a asp-controller="customer" asp-action="redeme" asp-route-id="@item.Product.CusID">Remove</a></td>
            <td>@item.Product.CusName</td>
            <td>@item.Product.CusSurname</td>
            <td>@item.Product.Points</td>
            <td>@item.Product.Credit</td>
        </tr>
    }
</table>
<br />
<a asp-controller="Home" asp-action="index">Continue Shopping</a>
<br />
<a asp-controller="checkout" asp-action="index" asp-route-id="">Go To Checkout</a>