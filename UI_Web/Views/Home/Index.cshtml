

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<style>


    body {
        background: #F5F1EE;
        font-family: 'Roboto', sans-serif
    }

    .card {
        width: 250px;
        border-radius: 10px
    }

    .card-img-top {
        border-top-right-radius: 10px;
        border-top-left-radius: 10px
    }

    span.text-muted {
        font-size: 12px
    }

    small.text-muted {
        font-size: 8px
    }

    h5.mb-0 {
        font-size: 1rem
    }

    small.ghj {
        font-size: 9px
    }

    .mid {
        background: #ECEDF1
    }

    h6.ml-1 {
        font-size: 13px
    }

    small.key {
        text-decoration: underline;
        font-size: 9px;
        cursor: pointer
    }

    .btn-danger {
        color: #FFCBD2
    }

        .btn-danger:focus {
            box-shadow: none
        }

    small.justify-content-center {
        font-size: 9px;
        cursor: pointer;
        text-decoration: underline
    }
    }
</style>

<div class="container-fluid d-flex justify-content-center">
    @foreach (var item in ViewBag.product)
    {

        <div class="row mt-5">
            <div class="col-sm-4">
                <div class="card">

                    <img src="@item.ImageURL" class="card-img-top" height="200" />
                    @*<img id="ImgViewer" width="150" height="150" style="border:1px solid #000000" />*@
                    <div class="card-body pt-0 px-0">
                        <div class="d-flex flex-row justify-content-between mb-0 px-3">
                            <h6 class="text-muted mt-1">@item.CofName</h6>
                            <h6>R @item.Price</h6>
                        </div>
                        <hr class="mt-2 mx-3">
                        <div class="d-flex flex-row justify-content-between px-3 pb-4">
                            <div class="d-flex flex-column"><span class="text-muted">Description</span><small class="text-muted">@item.CofDiscription</small></div>

                        </div>
                        <div class="d-flex flex-row justify-content-between p-3 mid">
                            <div class="d-flex flex-column">
                                <small class="text-muted mb-1">Quantity</small>
                            </div>
                            <div class="d-flex flex-column">
                                <small class="text-muted mb-2"></small>
                            </div>
                        </div>
                        <a asp-controller="cart" asp-action="buy" asp-route-id="@item.CofID" class="btn btn-danger btn-block">Buy Now</a>

                        @*<div class="mx-3 mt-3 mb-2"><button type="button" class="btn btn-danger btn-block"><small>ADD TO CARD</small></button></div>*@
                    </div>
                </div>
            </div>



        </div>
    }


</div>